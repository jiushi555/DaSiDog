<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/theme_lay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/logo_layout"
            android:layout_width="70.0dip"
            android:layout_height="70.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="10.0dip"
            
            android:gravity="center" >

            <ImageView
                android:id="@+id/theme_img"
                android:layout_width="58.0dip"
                android:layout_height="58.0dip"
                android:layout_gravity="center"
                android:background="@null"
                android:src="@drawable/a1" />
        </LinearLayout>

        

        <TextView
            android:id="@+id/theme_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14.0dip"
            android:gravity="center_vertical"
            android:text="1"
            android:textColor="@color/text_gray_cccccc"
            android:textSize="16.0sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/theme_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12.0dip"
            android:layout_toLeftOf="@id/theme_num"
            android:layout_toRightOf="@id/logo_layout"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="哈哈股份"
            android:textColor="@color/search_com_text"
            android:textSize="15.0sp" />
    </RelativeLayout>

    

</LinearLayout>