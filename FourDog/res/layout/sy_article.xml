<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/a_title"
        android:background="#FFFFFFFF" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/wdwt_header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.5dip"
                    android:orientation="horizontal"
                    android:padding="0.0dip" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15.0dip"
                        android:padding="0.0dip" >

                        <ImageView
                            android:id="@+id/portrati"
                            android:layout_width="37.5dip"
                            android:layout_height="37.5dip"
                            android:src="@drawable/ic_portrait" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9.0dip" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1.5dip"
                            android:layout_marginTop="15.5dip"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/a_writer_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:ellipsize="end"
                                android:includeFontPadding="false"
                                android:singleLine="true"
                                android:text="姚建勋"
                                android:textColor="#ff3c8ed4"
                                android:textSize="15.0dip" />

                            <TextView
                                android:id="@+id/a_writer_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/a_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/a_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3.0dip"
                                android:gravity="center"
                                android:includeFontPadding="false"
                                android:text="一小时前提问"
                                android:textColor="@color/time_back_white"
                                android:textSize="13.5dip" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/adopt_icon"
                            android:layout_width="43.5dip"
                            android:layout_height="43.5dip"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/adopt_bg"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/wdwt_card"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="0.0dip" >

                    <RelativeLayout
                        android:layout_width="37.5dip"
                        android:layout_height="37.5dip"
                        android:layout_marginLeft="13.5dip" >

                        <TextView
                            android:id="@+id/a_now"
                            android:layout_width="24.0dip"
                            android:layout_height="10.5dip"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="9.0dip"
                            android:background="@drawable/lv_bg"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="3"
                            android:textColor="@color/white"
                            android:textSize="9.0dip" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/l2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="48.0dip"
                        android:layout_marginTop="4.5dip"
                        android:clipChildren="true"
                        android:orientation="vertical"
                        android:padding="0.0dip" >

                        <TextView
                            android:id="@+id/a_nr"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12.0dip"
                            android:layout_marginRight="13.5dip"
                            android:lineSpacingExtra="3.0dip"
                            android:paddingLeft="0.0dip"
                            android:text="1212ss"
                            android:textColor="#ff505050"
                            android:textSize="16.5dip" />

                        <ImageView
                            android:id="@+id/sy_a_img"
                            android:layout_width="200dip"
                            android:layout_height="200dip"
                            android:scaleType="fitStart" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:layout_marginTop="10dip"
                    android:background="#F0F0F0" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dip"
                    android:text="回答"
                    android:textColor="@color/black"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/ans_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="10dip"
                    android:text="0人参与回答"
                    android:textColor="#ADADAD"
                    android:textSize="15dip" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#F0F0F0" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#D0D0D0"
        android:orientation="vertical" >

        

            <include layout="@layout/layout_send_msg" />

            <include
                android:id="@+id/add_tool"
                layout="@layout/send_msg_tool"
                android:visibility="gone" />
    </LinearLayout>

    <!-- </RelativeLayout> -->

</RelativeLayout>