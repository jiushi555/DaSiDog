<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/res_cor1" >
    
	
    <LinearLayout
        android:id="@+id/sy_tab"
        android:layout_width="fill_parent"
        android:layout_height="55.0dip"
        android:layout_alignParentBottom="true"
        android:background="@color/res_cor1"
        android:orientation="horizontal"
        android:paddingBottom="8dip" >

        <RelativeLayout
            android:id="@+id/btn_home"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8.0dip"
                android:background="@drawable/tab_1_off" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivHome"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4.0dip"
                android:text="首页"
                android:textColor="#ff2d2d2d"
                android:textSize="10.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_gz"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/ivgz"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8.0dip"
                android:background="@drawable/tab_2_off" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivgz"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4.0dip"
                android:text="工作"
                android:textColor="@color/text_title"
                android:textSize="10.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btnky"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/tab_3_off" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_ky"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/ivky"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8.0dip"
                android:background="@drawable/tab_3_off" />

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivky"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4.0dip"
                android:text="考研"
                android:textColor="@color/text_title"
                android:textSize="10.0sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/btn_theme"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/ivtheme"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8.0dip"
                android:background="@drawable/theme_off" />

            <TextView
                android:id="@+id/t_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivtheme"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4.0dip"
                android:text="话题"
                android:textColor="@color/text_title"
                android:textSize="10.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_xx"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/ivxx"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8.0dip"
                android:background="@drawable/tab_4_off" />
			<TextView 
			    android:id="@+id/xx_num"
			    android:layout_width="7dip"
			    android:layout_height="7dip"
			    android:background="@drawable/notive"
			    android:layout_toRightOf="@id/ivxx"
			    android:layout_alignTop="@id/ivxx"
			    android:visibility="gone"></TextView>
			<TextView
                android:id="@+id/t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivxx"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4.0dip"
                android:text="消息"
                android:textColor="@color/text_title"
                android:textSize="10.0sp" />
        </RelativeLayout>
        
    </LinearLayout>
    
    <View
        android:id="@+id/sy_tab_line"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_above="@id/sy_tab"
        android:background="@color/res_cor6" />
  <android.support.v4.view.ViewPager
        android:id="@+id/viewpage"
        android:layout_above="@id/sy_tab_line"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />

  

</RelativeLayout>