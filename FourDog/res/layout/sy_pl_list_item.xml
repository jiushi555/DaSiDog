<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wdwt_list"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/wdwt_layout_background"
    android:orientation="vertical"
    android:padding="0.0dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13.5dip"
        android:orientation="horizontal"
        android:padding="0.0dip" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:padding="0.0dip" >

            <ImageView
                android:id="@+id/pl_portrati"
                android:layout_width="37.5dip"
                android:layout_height="37.5dip" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9.0dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1.5dip"
                android:layout_marginTop="15.5dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/writer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="姚建勋"
                    android:textColor="#ff3c8ed4"
                    android:textSize="15.0dip" />

                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="一小时前提问"
                    android:textColor="@color/time_back_white"
                    android:textSize="13.5dip" />
            </LinearLayout>

            <ImageView
                android:id="@+id/adopt_icon"
                android:layout_width="43.5dip"
                android:layout_height="43.5dip"
                android:layout_alignParentRight="true"
                android:src="@drawable/adopt_bg"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/wdwt_card"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:background="@drawable/wdwt_layout_background"
        android:padding="0.0dip" >

        <RelativeLayout
            android:layout_width="37.5dip"
            android:layout_height="37.5dip"
            android:layout_marginLeft="13.5dip" >

            <TextView
                android:id="@+id/now"
                android:layout_width="24.0dip"
                android:layout_height="10.5dip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9.0dip"
                android:background="@drawable/lv_bg"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="9.0dip" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48.0dip"
            android:layout_marginTop="4.5dip"
            android:clipChildren="true"
            android:orientation="vertical"
            android:padding="0.0dip" >

            <TextView
                android:id="@+id/pl_nr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_marginRight="13.5dip"
                android:autoLink="web"
                android:lineSpacingExtra="3.0dip"
                android:paddingLeft="0.0dip"
                android:text="1212ss"
                android:textColor="#ff505050"
                android:textSize="16.5dip"
                android:typeface="serif" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_id"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/pl_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" >
    </TextView>

    <TextView
        android:id="@+id/writer_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" >
    </TextView>

    <View
        android:id="@+id/fengexian"
        style="@style/setting_divider"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="60.0dip" />

</LinearLayout>